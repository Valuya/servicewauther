{
  "compilerOptions": {
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "module": "ES2020",
    "outDir": "./dist",
    "lib": [
      "es2020",
      "dom",
      "webworker"
    ],
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src/**.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
